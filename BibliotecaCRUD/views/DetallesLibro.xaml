<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaCRUD.views.DetallesLibro"
             Title="DetallesLibro">
    <VerticalStackLayout>
        <StackLayout Orientation="Horizontal" Padding="10" Spacing="10">
            <Label Text="{Binding SelectedLibro.Titulo}" WidthRequest="200" VerticalOptions="Center" />
            <Label Text="{Binding SelectedLibro.Autor}" WidthRequest="150" VerticalOptions="Center" />
            <Label Text="{Binding SelectedLibro.FechaDeSalida}" WidthRequest="50" VerticalOptions="Center" />
            <Label Text="{Binding SelectedLibro.Sinopsis}" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
            <Image Source="{Binding SelectedLibro.Img}" MaximumHeightRequest="250" MaximumWidthRequest="250"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>